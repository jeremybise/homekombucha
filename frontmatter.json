{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "filePrefix": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publish Date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Images",
          "name": "images",
          "type": "image",
          "multiple": true,
          "isPreviewImage": true
        },
        {
          "title": "Is in draft?",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        }
      ]
    },
    {
      "name": "recipe",
      "pageBundle": false,
      "previewPath": "/posts",
      "filePrefix": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "Is in draft?",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Images",
          "name": "images",
          "type": "image",
          "multiple": true,
          "isPreviewImage": true
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Recipe",
          "name": "recipe",
          "type": "fields",
          "fields": [
            {
              "title": "keywords",
              "name": "keywords",
              "type": "string"
            },
            {
              "title": "Cuisine",
              "name": "cuisine",
              "type": "choice",
              "choices": [
                "American",
                "Japanese",
                "French",
                "Chinese"
              ]
            },
            {
              "title": "Prep Time",
              "name": "prep_time",
              "type": "fields",
              "fields": [
                {
                  "title": "days",
                  "name": "days",
                  "type": "number"
                },
                {
                  "title": "hours",
                  "name": "hours",
                  "type": "number"
                },
                {
                  "title": "minutes",
                  "name": "minutes",
                  "type": "number"
                }
              ]
            },
            {
              "title": "Cook Time",
              "name": "cook_time",
              "type": "fields",
              "fields": [
                {
                  "title": "days",
                  "name": "days",
                  "type": "number"
                },
                {
                  "title": "hours",
                  "name": "hours",
                  "type": "number"
                },
                {
                  "title": "minutes",
                  "name": "minutes",
                  "type": "number"
                }
              ]
            },
            {
              "title": "Total Time",
              "name": "total_time",
              "type": "fields",
              "fields": [
                {
                  "title": "days",
                  "name": "days",
                  "type": "number"
                },
                {
                  "title": "hours",
                  "name": "hours",
                  "type": "number"
                },
                {
                  "title": "minutes",
                  "name": "minutes",
                  "type": "number"
                }
              ]
            },
            {
              "title": "Yield",
              "name": "yield",
              "type": "fields",
              "fields": [
                {
                  "title": "integer",
                  "name": "integer",
                  "type": "number"
                },
                {
                  "title": "text",
                  "name": "text",
                  "type": "string"
                }
              ]
            },
            {
              "title": "Equipment",
              "name": "equipment",
              "type": "list"
            },
            {
              "title": "Ingredients",
              "name": "ingredients",
              "type": "list"
            },
            {
              "title": "Directions",
              "name": "directions",
              "type": "list"
            },
            {
              "title": "Notes",
              "name": "notes",
              "type": "list"
            }
          ]
        }
      ]
    }
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:8888",
  "frontMatter.content.pageFolders": [
    {
      "path": "[[workspace]]/archetypes",
      "title": "archetypes"
    },
    {
      "path": "[[workspace]]/content",
      "title": "content",
      "previewPath": "/",
      "filePrefix": null
    },
    {
      "path": "[[workspace]]/content/posts",
      "title": "posts",
      "previewPath": "/posts",
      "filePrefix": null
    }
  ]
}